<Window x:Class="Chemie.aboutapp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemie"
        mc:Ignorable="d"
        BorderBrush="Black"
BorderThickness="1px"
        AllowsTransparency="True"
        WindowStyle="None"
        Padding="0"
        WindowStartupLocation="CenterScreen"
        Title="aboutapp" Height="450" Width="600">

    <Grid>
        <Label x:Name="Headline" Content="O aplikaci" Width="600" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="31" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Background="#FFB9D1EA"/>
        <Button Style="{DynamicResource ButtonStyle1}" Content="X" HorizontalAlignment="Left" Margin="570,0,0,0" VerticalAlignment="Top" Click="Button_Click" Width="30" Height="30" BorderThickness="0,0,0,0" Padding="0,0,0,0"/>
        <Label Content="Název:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Autor:" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Aplikace se nachází ve vývoji, proto může být nestabilní!" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock Margin="225,41,197,387"><Hyperlink Name="swpage" NavigateUri="https://github.com/Johan5140/Chemie-new" RequestNavigate="Hyperlink_RequestNavigate">Stránka programu na github.com</Hyperlink></TextBlock>
        <Label Name="Nameapp" Content="Chemie" HorizontalAlignment="Left" Margin="170,36,0,0" VerticalAlignment="Top"/>
        <Label Content="Copyright © Johan5140 (GitHub)  2024" HorizontalAlignment="Left" Margin="170,98,0,0" VerticalAlignment="Top"/>
        <TextBox Name="abouttext" HorizontalAlignment="Center" Margin="0,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="580" Height="276"/>
        <Label Content="Verze:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Name="ver" Content="Label" HorizontalAlignment="Left" Margin="170,67,0,0" VerticalAlignment="Top"/>
        <TextBlock Margin="343,137,79,291"><Hyperlink Name="reportlink" NavigateUri="https://github.com/Johan5140/Chemie-new/issues" RequestNavigate="Hyperlink_RequestNavigate">Nahlásit chybu</Hyperlink></TextBlock>
    </Grid>
</Window>
