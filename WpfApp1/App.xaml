        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource ButtonsLabel}" />
            <Setter Property="Background" Value="{DynamicResource Buttonsback}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Buttonshover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

